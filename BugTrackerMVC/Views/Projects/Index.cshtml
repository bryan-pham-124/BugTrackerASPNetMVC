

@model IEnumerable<Projects>

@{
    ViewData["Title"] = "Index";
}



<div class="container p-3 table-section">

    @if(TempData["success"] != null)
    {
        <h2>@TempData["success"]</h2>
    }  
    <div class="table-title row pt-4  d-flex align-items-center">
        <div class="col-6">
            <h2 class="text-primary">Projects</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Projects" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Project 
            </a>

        </div>
    </div>

    <table class="projects-table table table-bordered table-striped" >
        <thead class="table-headers">
            <tr>
                <th>Project Name</th>
                <th>Project Description</th>
                <th>Team Members</th>
                <th>Entry Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="20%">@obj.ProjectName</td>
                    <td width="20%">@obj.Description</td>
                    <td width="20%">@obj.TeamMembers</td>
                    <td width="20%">@obj.CreateDateTime</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                             <a asp-controller="Tickets" asp-action="Index" asp-route-id="@obj.Id" class="btn btn-success mx-2"> 
                                <i class="bi bi-question"></i>

                               Details
                            </a>
                            <a asp-controller="Projects" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"> 
                                <i class="bi bi-pencil-square"></i> 
                               Edit
                            </a>
                             <a asp-controller="Projects" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"> 
                                <i class="bi bi-trash-fill"></i>
                               Delete
                            </a>
                           
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>