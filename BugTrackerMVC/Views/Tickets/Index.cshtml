@model MultipleModels

@{
    ViewData["Title"] = "Index";
}


@foreach (var obj in  Model.Projects) {

    var IstItem = Model.Projects.First();
    // do something with each item
    if (obj == (IstItem)) {

        <div class="table-title row pt-4  d-flex align-items-center">

            <div class="col-6">
                <h2 class="text-primary">Tickets for @obj.ProjectName</h2>
            </div>

            <div class="col-6 text-end">
                    
                <a asp-controller="Tickets" asp-action="Create" asp-route-projectId = "@obj.Id" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> &nbsp; Create New Ticket
                </a>
            </div>
        </div>
    }
    break;

}



 <table class="projects-table table table-bordered table-striped" >
        <thead class="table-headers">
            <tr>
                <th>Project Name</th>
                <th>Ticket Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Priority</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.Tickets)
            {
                <tr>
                    <td width="20%">@obj.ProjectName  </td>
                    <td width="20%">@obj.TicketTitle</td>
                    <td width="20%">@obj.Description</td>
                    <td width="20%">@obj.Status</td>
                    <td width="20%">@obj.Priority</td>
                    <td width="20%">@obj.Type</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                           
                            <a asp-controller="Tickets" asp-action="Create"  asp-route-projectId = "@obj.ProjectId" class="btn btn-primary mx-2"> 
                                <i class="bi bi-plus-circle"></i> &nbsp; New Ticket
                            </a>
                            <a asp-controller="Tickets" asp-action="Edit" asp-route-ticketId="@obj.Id" class="btn btn-primary mx-2"> 
                                <i class="bi bi-pencil-square"></i> 
                               Edit @obj.Id
                            </a>
                             <a asp-controller="Tickets" asp-action="Delete" asp-route-ticketId="@obj.Id"   class="btn btn-danger mx-2"> 
                                <i class="bi bi-trash-fill"></i>
                               Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>



    <h1>Project Info</h1>
    <table class="projects-table table table-bordered table-striped" >
        <thead class="table-headers">
            <tr>
                <th>Project Name</th>
                <th>Project Description</th>
                <th>Team Members</th>
                <th>Entry Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.Projects)
            {
                <tr>
                    <td width="20%">@obj.ProjectName</td>
                    <td width="20%">@obj.Description</td>
                    <td width="20%">@obj.TeamMembers</td>
                    <td width="20%">@obj.CreateDateTime</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                             <a asp-controller="Tickets" asp-action="Index" asp-route-id="@obj.Id" class="btn btn-success mx-2"> 
                                <i class="bi bi-question"></i>

                               Details
                            </a>
                            <a asp-controller="Projects" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"> 
                                <i class="bi bi-pencil-square"></i> 
                               Edit
                            </a>
                             <a asp-controller="Projects" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"> 
                                <i class="bi bi-trash-fill"></i>
                               Delete
                            </a>
                           
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

 





    