@model MultipleModels



<h1>Welcome to the Tickets Details Page!</h1>



 <table class="projects-table table table-bordered table-striped" >
        <thead class="table-headers">
            <tr>
                <th>Ticket Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Priority</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.Tickets)
            {
                <tr>
                    <td width="20%">@obj.TicketTitle</td>
                    <td width="20%">@obj.Description</td>
                    <td width="20%">@obj.Status</td>
                    <td width="20%">@obj.Priority</td>
                    <td width="20%">@obj.Type</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Tickets" asp-action="Edit" asp-route-ticketId="@obj.Id" class="btn btn-primary mx-2"> 
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                             <a asp-controller="Tickets" asp-action="Delete" asp-route-ticketId="@obj.Id"   class="btn btn-danger mx-2"> 
                                <i class="bi bi-trash-fill"></i>  Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>




@foreach (var obj in  Model.Tickets) {

    var IstItem = Model.Tickets.First();
    // do something with each item
    if (obj == (IstItem)) {

        <div class="table-title row pt-4  d-flex align-items-center">

            <div class="col-6">
                <h2 class="text-primary">Comments </h2>
            </div>

            <div class="col-6 text-end">
                    
                <a asp-controller="Comments" asp-action="Create" asp-route-ticketId = "@obj.Id" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> &nbsp; Create New Comment
                </a>
            </div>
        </div>
    }
    break;

}


